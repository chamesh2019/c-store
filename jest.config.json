{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "**/*.js",
    "!coverage/**",
    "!node_modules/**",
    "!benchmark.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testTimeout": 10000
}
